{% set pagetitle = 'Enter your username and password' %}
    {% block preload %}
    <link rel="stylesheet" href="{{ asset('site.css', 'custom-multiauth') }}">
    {% endblock %}
{% extends "@core/base.twig" %}

{% block postload %}
    <script src="{{ asset('js/loginuserpass.js', 'core') }}"></script>
{% endblock %}

{% block content %}

    {% if errorcode -%}
    <div class="pure-g">
        <div class="pure-u-1">
            <div class="message-box error">

                {% set errtitles = errorcodes['title'] %}
                {% set errtitle = errtitles[errorcode] %}

                <h3>{{ errtitle }}</h3>

                {% set errdescs = errorcodes['descr'] %}
                {% set errdesc = errdescs[errorcode] %}

                <p>{{ errdesc }}</p>

            </div>
        </div>
    </div>
    {%- endif %}
<div class='mid'>
<div>
    <h1>{{ 'Enter your email and password' }}</h1>

    <div class="center-form login-form-start">
        <form id="f"  action="{{ formURL }}" method="post" name="f" spellcheck="false">
                <div class="pure-control-group">
                     <div class='formLabel'> <label for="username" >{{ 'Email' }}</label></div>
                    <input id="username" {{ forceUsername ? 'disabled' }} placeholder="{{ username }}" type="text" name="username" class="edge"
            {%- if not forceUsername %} tabindex="1" value="{{ username }}" autocomplete="username" {% endif %}
            >
                </div>
                <div >
                     <div class='formLabel'> <label for="password">{{ 'Password'}}</label></div>
                    <input id="password" type="password" tabindex="2" name="password" class="edge" autocomplete="current-password"
                    autofocus >
                    <i id="eyeIcon" class="ph-eye-closed"></i>
                </div>           
               

            <div ><br>
                <button class="pure-button" id="submit_button"
                        type="submit" tabindex="6" data-default="Login"
                        data-processing="Processing...">
                Login
                </button>
            </div>
        </form>
        </div>

</div>
    </div>
   

    <br><br>


{% endblock %}
